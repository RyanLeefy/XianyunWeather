<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    >
    <com.example.ryanlee.rainbowweather.ui.CustomTextView
        android:id="@+id/tv_dayweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="周X"
        android:textSize="16sp"
        />
    <com.example.ryanlee.rainbowweather.ui.CustomTextView
        android:id="@+id/tv_daydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dayweek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="XX月XX日"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/img_day"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_daydate"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"/>

        <LinearLayout
              android:id="@+id/tv_daytmplayout"
              android:layout_below="@id/img_day"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:layout_centerHorizontal="true"
              android:orientation="horizontal"
            >

             <com.example.ryanlee.rainbowweather.ui.CustomTextView
                 android:id="@+id/tv_daytmp_min"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:text="XX"
                 android:textSize="16sp"/>

            <com.example.ryanlee.rainbowweather.ui.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="℃"
                android:textSize="12sp"/>

            <com.example.ryanlee.rainbowweather.ui.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="～"
                android:textSize="12sp"/>

            <com.example.ryanlee.rainbowweather.ui.CustomTextView
                android:id="@+id/tv_daytmp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="XX"
                android:textSize="16sp"/>

            <com.example.ryanlee.rainbowweather.ui.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="℃"
                android:textSize="12sp"/>

         </LinearLayout>

    <com.example.ryanlee.rainbowweather.ui.CustomTextView
        android:id="@+id/tv_daycond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_daytmplayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="雷阵雨"
        android:textSize="16sp"
        />
    <com.example.ryanlee.rainbowweather.ui.CustomTextView
        android:id="@+id/tv_daywind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_daycond"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="微风"
        android:textSize="16sp"
        />
</RelativeLayout>