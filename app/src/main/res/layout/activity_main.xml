<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/change"
            android:layout_marginRight="3dp" />

        <com.example.ryanlee.rainbowweather.ui.CustomTextView
            android:id="@+id/tv_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="城市"
            android:textSize="25sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:layout_marginTop="5dp"
                     android:id="@+id/layout_nowtime">
                     <com.example.ryanlee.rainbowweather.ui.CustomTextView
                         android:id="@+id/tv_nowweek"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="周X"
                         android:textSize="20sp"/>
                     <com.example.ryanlee.rainbowweather.ui.CustomTextView
                         android:id="@+id/tv_nowdate"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="XX月XX日"
                         android:textSize="20sp"
                         android:layout_marginLeft="15dp"/>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:id="@+id/layout_updatetime"
                     android:layout_below="@id/layout_nowtime"
                     android:gravity="center"
                     >

                     <com.example.ryanlee.rainbowweather.ui.CustomTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="(更新时间："
                         android:textSize="14sp" />

                     <com.example.ryanlee.rainbowweather.ui.CustomTextView
                         android:id="@+id/tv_updatetime"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="15:15"
                         android:textSize="14sp" />

                     <com.example.ryanlee.rainbowweather.ui.CustomTextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="）"
                         android:textSize="14sp" />

                 </LinearLayout>

                 <ImageView
                      android:id="@+id/img_now"
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      android:layout_marginTop="5dp"
                      android:layout_below="@id/layout_updatetime"
                      android:layout_centerHorizontal="true"
                     />
                  <com.example.ryanlee.rainbowweather.ui.CustomTextView
                      android:id="@+id/tv_nowcond"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="雷暴雨"
                      android:layout_below="@id/img_now"
                      android:textSize="23sp"
                      android:layout_centerHorizontal="true"/>
             </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center">
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:id="@+id/tv_nowtmp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="50sp"
                    />
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textSize="35sp"
                    />
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="～"
                    android:textSize="35sp"
                    />
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:id="@+id/tv_nowtmp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="50sp"
                    />
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textSize="35sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实时:"
                    android:textSize="20sp"/>
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:id="@+id/tv_nowtmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="20sp"/>
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textSize="20sp"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相对湿度:"
                    android:textSize="20sp"/>
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:id="@+id/tv_nowhum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="20sp"/>
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力:"
                    android:textSize="20sp"/>
                <com.example.ryanlee.rainbowweather.ui.CustomTextView
                    android:id="@+id/tv_nowwind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXX"
                    android:textSize="20sp"/>

            </LinearLayout>
        </LinearLayout>







    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.example.ryanlee.rainbowweather.ui.CustomTextView
            android:id="@+id/tv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="        白天虽然天气以阴为主，但由于天热，加上湿度较大，您会感到很闷热，很不舒适。"
            android:textSize="18sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout
            android:id="@+id/layout_day1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">
        </com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout>

        <com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout
            android:id="@+id/layout_day2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout>

        <com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout
            android:id="@+id/layout_day3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout>

        <com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout
            android:id="@+id/layout_day4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout>

        <com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout
            android:id="@+id/layout_day5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </com.example.ryanlee.rainbowweather.ui.Daily_forecastLayout>

    </LinearLayout>

</LinearLayout>


    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/level_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:visibility="invisible"
        app:loading_renderer="LevelLoadingRenderer" />

</FrameLayout>